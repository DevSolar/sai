;=============================================================================

(welcome "\nSimple Amiga Installer")

(set #selected-level @user-level)

(if (= 0 (askchoice (prompt #choice-prompt)
             (help #choice-help)
             (choices #choice-init #choice-exp)
             (default (if (exists "SYS:Installer") 0 1))
         ))
(
    ;======================
    ; Initial Installation
    ;======================

    (set #disk
        (askdir (prompt #which-disk)
                (help #which-disk-help)
                (default "DH0:")
                (disk)
        )
    )

    (set @default-dest
        (askstring (prompt (#format-name #disk))
                   (help @askstring-help)
                   (default "Workbench")
        )
    )

    (user 2)
    (run ("SYS:System/Format DRIVE %s NAME %s FFS INTL NODIRCACHE NOICONS QUICK" #disk @default-dest)
         (prompt (#format-request #disk))
         (help (#format-help #disk))
         (confirm)
    )
    (user #selected-level)

    (textfile (dest "ENV:SAITargetDisk") (append #disk))
    (run "contrib/patch -o \"Initial Installation\" Install3.1:Install/Install \"Initial Installation.patch\"")
    (run (cat "contrib/Installer SCRIPT \"Initial Installation\" APPNAME \"Workbench 3.1\" MINUSER " (select #selected-level "NOVICE" "AVERAGE" "EXPERT") " NOLOG LANGUAGE " @language))
)
(
    ;======================
    ; Workbench Extensions
    ;======================
))
