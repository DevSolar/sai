; $VER: Simple Amiga Installer 40.1 (7.11.122)

(complete 0)

;=============================================================================
; English strings

(if (= @language "english")
(

(set #choice-prompt
(cat "\nSelect desired action:"
))

(set #choice-help
(cat "SAI attempts to guess whether you want to install "
     "a fresh Workbench or expand an existing installation."
     "\n\nIf the guess is wrong, you can correct it here."
))

(set #choice-init
(cat "Install new Workbench"
))

(set #choice-exp
(cat "Expand existing Workbench"
))

(set #which-disk
(cat "In which partition should Workbench 3.1 be installed?"
))

(set #which-disk-help
(cat "\nThis section lets you choose on which hard drive partition the "
     "Workbench 3.1 files will be installed.\n\n"
     @askdir-help
))

(set #format-request
(cat "OK to format volume %s?\n\nWARNING!\n\nAll data will be lost!"
))

(set #format-name
(cat "Please confirm the name that %s should be given."
))

(set #format-help
(cat "You are asked to confirm that %s can be formatted and "
     "overwritten with a new Workbench installation."
))

))


